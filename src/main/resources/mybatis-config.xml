<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <!-- 스네이크 케이스와 카멜 케이스 매핑 설정 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <!-- 타입 별칭 설정 -->
    <typeAliases>
        <!-- Board 클래스에 대한 별칭 설정 -->
        <typeAlias type="kr.soft.campus.domain.Board" alias="Board"/>
        <typeAlias type="kr.soft.campus.domain.Member" alias="Member"/>
    </typeAliases>

    <!-- 다른 설정들 (예: 데이터베이스 연결 설정 등) -->

</configuration>